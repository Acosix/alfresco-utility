<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="beanTypeX.bean1" class="de.acosix.alfresco.utility.common.spring.TestDummyBean" />
    
    <bean id="beanTypeX.bean2" class="de.acosix.alfresco.utility.common.spring.TestDummyBean" />

    <bean class="de.acosix.alfresco.utility.common.spring.BeanDefinitionFromPropertiesPostProcessor">
        <property name="enabled" value="true" />
        <property name="propertyPrefix" value="testPrefix" />
        <property name="beanTypes">
            <list>
                <value>beanTypeX</value>
                <value>beanTypeY</value>
            </list>
        </property>
        <property name="propertiesSource">
            <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
                <property name="locations">
                    <list>
                        <value>classpath:BeanDefinitionFromPropertiesPostProcessorTest/renameBean.properties</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

</beans>