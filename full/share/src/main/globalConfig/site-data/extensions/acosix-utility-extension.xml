                                <evaluator>evaluator.doclib.action.DocumentEnableInSmartFolder</evaluator>
                            </action>
                            <action id="document-view-googlemaps" appendEvaluators="true">
                                <evaluator>evaluator.doclib.action.DocumentEnableInSmartFolder</evaluator>
                            </action>
