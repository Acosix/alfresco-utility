                            </action>
                        </actionGroup>

                        <actionGroup id="folder-browse">
                            <action id="document-approve" appendEvaluators="true">
                                <evaluator>evaluator.doclib.action.FolderEnableInSmartFolder</evaluator>
                            </action>
                            <action id="document-reject" appendEvaluators="true">
