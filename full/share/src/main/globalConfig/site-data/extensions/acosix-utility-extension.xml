                            </action>
                            <action id="document-delete" appendEvaluators="true">
                                <evaluator>evaluator.doclib.action.DocumentEnableInSmartFolder</evaluator>
                            </action>
                            <action id="document-manage-granular-permissions" appendEvaluators="true">
